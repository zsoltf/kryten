#!/usr/bin/env ruby

require "bundler/setup"
require "kryten"
require "pry"

include Kryten

class Work
  include Kryten::Runner
  include Kryten::Lawger
  include Kryten::Daemon
end

w1 = Work.new('work1')
w2 = Work.new('work2')
w3 = Work.new('work3')
w3.workers do
  [Work.new('w3sub1'), Work.new('w3sub2')]
end

#visor = Supervisor.start_workers([w1,w2,w3])

binding.pry
